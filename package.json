{
  "name": "serverless-saas",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "deploy:functions": "cd ./functions && npm run deploy",
    "lint": "eslint ./src/ --ext ts,js,tsx,jsx",
    "lint:fix": "eslint ./src/ --ext ts,js,tsx,jsx --fix",
    "start": "next start",
    "format": "prettier 'src/**/*.{js,jsx,ts,tsx,json,css}' --write",
    "type-check": "tsc",
    "install:initial": "npm install && cd functions && npm install && cp ../.env.local.example ../.env.local && cd .."
  },
  "browserslist": [
    "> 1%"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run type-check && npm run lint:fix"
    }
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@stripe/stripe-js": "1.16.0",
    "firebase": "8.9.1",
    "netlify-cms-app": "^2.15.69",
    "next": "^12.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "11.3.4",
    "react-hook-form": "7.12.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.0",
    "@types/node": "16.4.10",
    "@types/react": "17.0.15",
    "@types/webpack-env": "1.16.2",
    "@typescript-eslint/eslint-plugin": "4.29.0",
    "@typescript-eslint/parser": "4.29.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "frontmatter-markdown-loader": "3.6.3",
    "husky": "4.3.8",
    "postcss": "^8.4.5",
    "prettier": "^2.4.0",
    "pretty-quick": "3.1.1",
    "tailwindcss": "^3.0.13",
    "typescript": "4.3.5"
  }
}
